<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin</title>
</head>

<body>
  <%- include('header') -%>
    <h1>Admin</h1>
  <ul>
    <% if (quizzes && quizzes.length> 0) { %>
      <% quizzes.forEach(quiz=> { %>
        <li>
          <h3>
            <%= quiz.title %>
          </h3>
          <p>Time Limit: <%= quiz.timeLimit %>
          </p>
          <p>Score: <%= quiz.score %>
          </p>
          <p>Number of Questions: <%= quiz.numQuestions %>
          </p>
          <p>Quiz Type: <%= quiz.quizType %>
          </p>
          <a href="/auth/quizMain/<%= quiz._id %>">View Quiz</a>
          <form action="/auth/quizMain/<%= quiz._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
          </form>
        </li>

        <% }); %>
          <% } else { %>
            <p>No quizzes available.</p>
            <% } %>
  </ul>

  <!-- Add New Quiz Form -->
  <h2>Add New Quiz:</h2>
  <form action="/auth/quizMain" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required>

    <label for="timeLimit">Time Limit:</label>
    <input type="text" id="timeLimit" name="timeLimit" required>

    <label for="score">Score:</label>
    <input type="number" id="score" name="score" required>

    <label for="numQuestions">Number of Questions:</label>
    <input type="number" id="numQuestions" name="numQuestions" required>

    <!-- Select the type of quiz (MCQ or True/False) -->
    <label for="quizType">Type of Quiz:</label>
    <select id="quizType" name="quizType" required>
      <option value="multiple_choice">Multiple Choice</option>
      <option value="true_false">True/False</option>
    </select>

    <button type="submit" class="btn btn-primary">Create Quiz</button>
  </form>

  <%- include('footer') -%>
</body>

</html>